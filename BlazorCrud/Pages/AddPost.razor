@page "/createPost"
@inject IPostsManager articleManager
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager
<h1>
    Add Post
</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input type="text" for="Name" class="form-control" @bind-value="@post.Title" />
                <label for="Name" class="control-label">Content</label>
                <textarea form="Name" class="form-control" @bind="@post.PostContent" @bind:event="oninput"/>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" @onclick="() => CreatePost()">Save</button>
                <button type="button" class="btn btn-danger" @onclick="() => Cancel()">Cancel</button>
            </div>
        </form>
    </div>
</div>

@code {

    Post post = new Post();

    protected async Task CreatePost()
    {
        await articleManager.Insert(post);
        navigationManager.NavigateTo("/posts");
    }

    void Cancel()
    {
        navigationManager.NavigateTo("/posts");
    }
}